<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="dk.easvoucher.gui.coordinator.EventWindowController" prefHeight="600.0" prefWidth="800.0">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10">
            <children>
                <GridPane>
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <Label text="Event Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="eventName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="eventDescription" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <Label text="Start Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="startTime" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    <Label text="End Time:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="endTime" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    <Label text="Location:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="location" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    <Label text="Coordinator ID:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="coordinatorId" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </GridPane>
                <HBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="0"/>
                    </padding>
                    <Button text="Create" fx:id="createButton" onAction="#handleCreate"/>
                    <Button text="Read" fx:id="readButton" onAction="#handleRead"/>
                    <Button text="Update" fx:id="updateButton" onAction="#handleUpdate"/>
                    <Button text="Delete" fx:id="deleteButton" onAction="#handleDelete"/>
                </HBox>
                <TableView fx:id="eventsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Event ID" fx:id="eventIdColumn">
                            <cellValueFactory>
                                <PropertyValueFactory property="eventId"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Event Name" fx:id="eventNameColumn">
                            <cellValueFactory>
                                <PropertyValueFactory property="eventName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Description" fx:id="descriptionColumn">
                            <cellValueFactory>
                                <PropertyValueFactory property="description"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Start Time" fx:id="startTimeColumn">
                            <cellValueFactory>
                                <PropertyValueFactory property="startTime"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="End Time" fx:id="endTimeColumn">
                            <cellValueFactory>
                                <PropertyValueFactory property="endTime"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Location" fx:id="locationColumn">
                            <cellValueFactory>
                                <PropertyValueFactory property="location"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Coordinator ID" fx:id="coordinatorIdColumn">
                            <cellValueFactory>
                                <PropertyValueFactory property="coordinatorId"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
